@model IEnumerable<NotesProduct>

<div class="row pb-3">
    @foreach (var product in Model) 
    {
       <div class="col-lg-3 col-md-4 col-sm-6 p-2">
           <div class="card shadow border-0 rounded-lg h-100">
               <div class="card-body p-4">
                  <div class="card-header bg-white text-dark text-center">
                      <h5 class="mb-0">
                          @product.Title
                      </h5>
                  </div>
                  <div class="card-body d-flex flex-column">
                      <p class="text-white text-opacity-75 text-center mb-3">
                          <strong>Description:</strong> @product.Description
                      </p>
                      <p class="text-muted text-center mb-3 ">
                           <strong>Created:</strong> @product.CreatedDate.ToString("yyyy-MM-dd")
                      </p>
                        <p class="text-muted text-center mb-3 ">
                            <strong>Prior:</strong> @product.Category.Name
                        </p>
                  </div>
                  @* todo  кнопку создания новой Notes *@
                  <div class="text-center mt-3">
                      <a asp-action="Details"
                        asp-route-ProductId="@product.Id"
                           class="btn btn-lg btn-primary bg-white text-dark">
                          Details 
                        </a>
                   </div>
                  </div>
             </div>
       </div>
    }
</div>